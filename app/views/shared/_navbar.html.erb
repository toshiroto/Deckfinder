<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <h3 id="nav-deckfinder" class="nav-link" style="font-size: 24px"><%= link_to "Deckfinder", root_path, class: "navbar-brand" %></h3>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <div class="btn btn-login" id="navbarDropdown" data-toggle="dropdown" aria-haspopup='true' aria-expanded='false'><%= current_user.first_name.capitalize %></div>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Rent a Deck", decks_path, class: "dropdown-item" %>
            <%= link_to "My Rental List", rentals_path, class: "dropdown-item" %>
            <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item active">
          <%= link_to "Login", new_user_session_path, class: "btn btn-login" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
