<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <h3 class="nav-link link-red"><%= link_to "Deckfinder", root_path, class: "navbar-brand" %></h3>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <div class="search-bar">
      <%= form_tag decks_path, method: :get do %>
      <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a Deck" %>
      <%= submit_tag 'Search', class: "search-btn"%>
    <% end %>
    </div>
    <ul class="navbar-nav mr-auto">
    <% if user_signed_in? %>
      <li class="nav-item dropdown">
        <a class="dropdown-toggle btn-login", id="navbarDropdown", data-toggle= "dropdown", aria-haspopup=true, aria-expanded=false><%="#{current_user.first_name}"%></a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Decks", decks_path, class: "dropdown-item" %>
          <%= link_to "My Rental List", rentals_path, class: "dropdown-item" %>
          <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
<% else %>
    <li class="nav-item active">
      <%= link_to "Login", new_user_session_path, class: "btn btn-login" %>
    </li>
  <% end %>
    </ul>
  </div>
</div>
